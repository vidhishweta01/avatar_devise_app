<p id="notice"><%= notice %></p>
<%if current_user%>
<%= link_to 'New Post', new_post_path%>
<div class="float-right rounded">
<%= image_tag(current_user.avatar_thumbnail, class: "rounded-circle")  %>
</div>
<%end%>
<div class="row">
<% @posts.each do |post| %>
<div class="col-sm-4">
  <div class="card mb-3" >
    <div class="card-body">
      <h5 class="card-title text-dark" style="font-weight: bolder;" >
        <%= post.title %>
      </h5>
      <div class="card-text text-dark" style="background-color: rgb(180, 157, 175);">
        <%= post.blog.truncate(120) %>
      </div>
      <%= link_to 'Read More', post_path(post), class: "btn btn-info" %>
      <p class="text-decoration-none text-light btn btn-info "><%= authentic_user1(post)%></p>
      <p class="text-decoration-none text-light btn btn-info "><%= authentic_user2(post)%></p>
      <%= members_only(post)%>
    </div>
  </div>
</div>
<% end %>
</div>

