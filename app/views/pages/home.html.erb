<%if current_user%>
<div class="float-right rounded">
<%= image_tag(current_user.avatar_thumbnail, class: "rounded-circle")  %>
</div>
<%end%>

<div class="row">
<% @post.each do |post| %>
<div class="col-sm-4">
  <div class="card mb-3" >
    <div class="card-body">
      <h5 class="card-title text-dark" style="font-weight: bolder;" >
        <%= post.title %>
      </h5>
      <div class="card-text text-dark" style="background-color:rgb(255, 219, 175);">
        <%= post.blog.truncate(120) %>
      </div>
      <%= link_to 'Read More', post_path(post), class: "btn btn-info" %>
      <p><%= authentic_user1(post)%></p>
      <p><%= authentic_user2(post)%></p>
      <%= members_only(post)%>
    </div>
  </div>
</div>
<% end %>
</div>