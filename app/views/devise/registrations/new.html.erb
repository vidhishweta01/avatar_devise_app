<h2 class="text-center text-light" style="font-weight:bolder">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container-fluid w-50" >
  <div class="field">
  <%if resource.avatar.attached?%>
  <%=image_tag(resource.avatar)%>
  <%else%>
   <%= image_tag('/default_profile.jpg')%>
  <%end%>
  </div>

  <div class="field"style="font-weight: bolder">
    <%= f.label :email, class:"bg-warning p-1 text-center "%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
  </div>

  <div class="field d-flex flex-column w-100">
    <div><%= f.label :password, class:"bg-warning p-1 text-center"%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> chars min)</em>
    <% end %></div>
    <div><%= f.password_field :password, autocomplete: "new-password",class:"form-control" %></div>
  </div>

  <div class="field align-middle">
    <%= f.label :password_confirmation, class:"bg-warning p-1  text-center" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"%>
  </div>

  <div class="actions" style="padding-left: 16vw">
    <%= f.submit "Sign up",class:"btn-block btn-danger w-50" %>
  </div>
<% end %>
<div class="bg-danger py-1" style="width: 33%;margin-left: 16.2vw; padding-left: 7vw;">
<%= render "devise/shared/links"%>
</div>
</div>

