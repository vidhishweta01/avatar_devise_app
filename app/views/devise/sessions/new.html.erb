
<div class="container-fluid w-50 bg-secondary py-3" style="opacity: 0.78; padding-left: 10vw;">
<h2 style="font-weight: bolder; color: black;">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class:"bg-warning" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"bg-warning p-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"bg-warning p-1" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-danger" %>
  </div>
<% end %>
<%= render "devise/shared/links"%>
</div>
