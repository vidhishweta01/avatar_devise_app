<br/><br/>
<div class="container-fluid w-50 py-3" style="background-color:rgb(255, 219, 175); opacity: 0.78; padding-left: 17vw;">
<h2 style="font-weight: bolder; color: black;">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field d-flex flex-row">
    <%= f.label :email, class:" ml-5" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"ml-2" %>
  </div>
  <br/>
  <div class="field d-flex flex-row">
    <%= f.label :password, class:" p-1" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"ml-1"%>
  </div>
  <br/>
  <% if devise_mapping.rememberable? %>
    <div class="field d-flex flex-row ml-5">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:" p-1" %>
    </div>
  <% end %>

  <div class="actions d-flex flex-row">
    <%= f.submit "Log in", class:"btn btn-danger p-1" %>
    <%= render "devise/shared/links"%>
  </div>
<% end %>
</div>
